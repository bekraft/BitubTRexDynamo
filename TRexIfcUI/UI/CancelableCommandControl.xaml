<UserControl x:Class="TRexIfc.UI.CancelableCommandControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRexIfc.UI"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="150">
    <Grid MinHeight="25" MinWidth="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        
        <ProgressBar x:Name="Progress"
                     Grid.Column="0"
                     MinWidth="100" Height="15" Margin="5,5,2,5"
                     Minimum="0" Maximum="100"
                     Value="{Binding Path=Progress}"/>
        
        <Button x:Name="Cancel"
                Grid.Column="1"
                FontSize="6"
                Content="Cancel"
                Width="Auto" Margin="2,5,5,5" Height="Auto"                
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
